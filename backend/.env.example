# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database
MONGODB_URI=mongodb://localhost:27017/webworlds
MONGODB_TEST_URI=mongodb://localhost:27017/webworlds-test

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production-to-random-32-chars
JWT_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# For Production on Railway:
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/webworlds?retryWrites=true&w=majority
# JWT_SECRET=<generate-with: openssl rand -base64 32>
# CORS_ORIGIN=https://yourdomain.vercel.app
# NODE_ENV=production
