{
  "name": "webworlds-backend",
  "version": "0.1.0",
  "description": "WebWorlds Backend API - Lightweight, Fast, Production-Ready",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "echo 'Build skipped - using pre-built dist/'",
    "start": "node dist/server.js",
    "test": "echo \"Run tests here\"",
    "type-check": "tsc --noEmit",
    "db:init": "ts-node src/scripts/initialize.ts",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:reset": "npm run db:init && npm run db:seed"
  },
  "keywords": [
    "webworlds",
    "gaming",
    "roblox-like",
    "express",
    "mongodb",
    "socket.io"
  ],
  "author": "WebWorlds Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "socket.io": "^4.7.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
